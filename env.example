# 환경 설정
NODE_ENV=production

# 서버 포트
PORT=5000

# JWT 시크릿 키 (반드시 변경하세요!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 데이터베이스 경로 (SQLite)
DB_PATH=../database/quiz.db

# 세션 시크릿 키 (반드시 변경하세요!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS 설정
CORS_ORIGIN=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 로그 레벨
LOG_LEVEL=info

# Swing SSO 설정 (사용하는 경우)
SWING_SSO_ENABLED=false
SWING_SSO_URL=
SWING_SSO_CLIENT_ID=
SWING_SSO_CLIENT_SECRET=

# 타임존
TZ=Asia/Seoul

